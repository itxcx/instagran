.container {
  padding: 10px;
}

input {
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 10px;
}

button {
  margin-top: 15px;
  margin-bottom: 15px;
}

image {
  width: 100%;
}

text {
  text-align: center;
  display: block;
  margin-bottom: 15px;
}

button text {
  display: inline;
  margin: 0;
}

.form-item {
  display: block;
  position: relative;
}

.clear-icon {
  position: absolute;
  z-index: 99;
  top: 10px;
  right: 10px;
}