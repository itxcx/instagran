.container {
  padding: 10px;
  /*background-color: #fdfdfd;*/
}

input {
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 10px;
}

button {
  margin-top: 15px;
  margin-bottom: 15px;
}

image {
  width: 100%;
}

.text-center {
  text-align: center;
  display: block;
}

button text {
  display: inline;
  margin: 0;
}

.form-item {
  display: block;
  position: relative;
}

.clear-icon {
  position: absolute;
  z-index: 99;
  top: 10px;
  right: 10px;
}

.help {
  float: right;
  display: block;
  width: 36px;
  height: 36px;
}

.clearfix {
  clear: both;
}

.pop {
  text-align: center;
  display: block;
  border: 2px solid #ddd;
  box-sizing: border-box;
  padding: 15px 10px;
  box-shadow: 0 10px 10px -10px rgba(0,0,0,0.5);
  position: relative;
  border-radius: 5px;
}

.pop-emoji {
  display: inline-block;
  width: 20px;
  vertical-align: text-bottom;
  margin: 0 5px;
}

.pop text {
  /*color: #F39C12;*/
  color: #888;
  display: inline-block;
}


.index-info {
  margin-bottom: 10px;
}